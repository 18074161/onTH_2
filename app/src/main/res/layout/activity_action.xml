<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Action">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_user"
        android:layout_width="409dp"
        android:layout_height="445dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClear"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/plId"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="id"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/plGt"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:ems="10"
        android:hint="gioitinh"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/plId"
        app:layout_constraintStart_toEndOf="@+id/plId"
        app:layout_constraintTop_toTopOf="@+id/plId"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/plFn"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="FirstName"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/plId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/plId"
        app:layout_constraintTop_toBottomOf="@+id/plId" />

    <EditText
        android:id="@+id/plLn"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="LastName"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/plFn"
        app:layout_constraintEnd_toEndOf="@+id/plGt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/plGt"
        app:layout_constraintTop_toBottomOf="@+id/plGt" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="79dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="@+id/plFn"
        app:layout_constraintTop_toBottomOf="@+id/plFn" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="71dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="@+id/btnAdd"
        app:layout_constraintStart_toEndOf="@+id/btnAdd"
        app:layout_constraintTop_toTopOf="@+id/btnAdd"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="71dp"
        android:layout_height="53dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="@+id/btnClear"
        app:layout_constraintStart_toEndOf="@+id/btnClear"
        app:layout_constraintTop_toTopOf="@+id/btnClear"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnXoa"
        android:layout_width="71dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="@+id/btnCapNhat"
        app:layout_constraintStart_toEndOf="@+id/btnCapNhat"
        app:layout_constraintTop_toTopOf="@+id/btnCapNhat"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>